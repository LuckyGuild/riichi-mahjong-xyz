{
  "name": "riichi-mahjong",
  "version": "1.0.0",
  "description": "Riichi Mahjong Trainer",
  "scripts": {
    "clean": "find . -name 'dist' -type d -not -path './node_modules/*' -not -path './wasm/*' | xargs rm -rf",
    "prebuild": "npm run clean",
    "build": "cross-env NODE_ENV='production' TS_NODE_PROJECT='tsconfig.commonjs.json' webpack",
    "build:wasm": "cd wasm/decomposer && wasm-pack build",
    "dev": "cross-env TS_NODE_PROJECT='tsconfig.commonjs.json' webpack serve",
    "lint": "eslint 'src/**/*.{ts,tsx}' webpack.config.ts && tsc --noEmit --project tsconfig.commonjs.json && tsc --noEmit",
    "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}' webpack.config.ts && tsc --noEmit --project tsconfig.commonjs.json && tsc --noEmit"
  },
  "keywords": [],
  "author": "@luckyguid",
  "license": "Copyright",
  "private": true,
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix"
  },
  "dependencies": {
    "copy-to-clipboard": "^3.3.2",
    "decomposer": "file:./wasm/decomposer/pkg",
    "i18next": "^22.0.5",
    "i18next-browser-languagedetector": "^7.0.1",
    "nes.css": "^2.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hotkeys-hook": "^3.4.7",
    "react-i18next": "^12.3.1",
    "react-icons": "^4.6.0",
    "seedrandom": "^3.0.5"
  },
  "devDependencies": {
    "@livewing/eslint-config": "^1.0.6",
    "@svgr/webpack": "^6.5.1",
    "@tailwindcss/forms": "^0.5.3",
    "@tsconfig/strictest": "^2.0.5",
    "@types/html-webpack-plugin": "^3.2.6",
    "@types/jest": "^29.2.2",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@types/react-i18next": "^7.8.3",
    "@types/seedrandom": "^3.0.8",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.18.0",
    "@types/workbox-webpack-plugin": "^5.1.8",
    "autoprefixer": "^10.4.13",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.11.0",
    "cssnano": "^5.1.14",
    "eslint": "^8.27.0",
    "eslint-plugin-tailwindcss": "^3.6.2",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-localstorage-mock": "^2.4.22",
    "lint-staged": "^13.0.3",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.4.19",
    "postcss-loader": "^7.3.4",
    "prettier": "^2.7.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "webpack": "^5.97.1",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.15.2",
    "workbox-sw": "^6.5.4",
